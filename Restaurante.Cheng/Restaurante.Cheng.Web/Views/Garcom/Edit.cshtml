@model EditGarcomModel
@using Restaurante.Cheng.Web.Helpers
@using Restaurante.Cheng.Domain.Enums
@{
    Layout = "_Layout";
    ViewData["Title"] = "Editar Gar√ßom";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.2/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    @using (Html.BeginForm("UpdateGarcomAsync", "Garcom", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <div class="px-6 py-4">
        <div class="mb-4">
            @Html.LabelFor(model => model.Garcom.Nome, new { @class = "block text-gray-700 font-bold mb-2" })
            @Html.TextBoxFor(model => model.Garcom.Nome, new { @class = "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" })
        </div>
        <div class="mb-4">
            @Html.LabelFor(model => model.Garcom.Sobrenome, new { @class = "block text-gray-700 font-bold mb-2" })
            @Html.TextBoxFor(model => model.Garcom.Sobrenome, new { @class = "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" })
        </div>
        <div class="mb-4">
            @Html.LabelFor(model => model.Garcom.NumeroTelefone, new { @class = "block text-gray-700 font-bold mb-2" })
            @Html.TextBoxFor(model => model.Garcom.NumeroTelefone, new { @class = "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" })
        </div>
    </div>
    <div class="px-6 py-4 bg-gray-100 text-right">
        <button type="button"
            class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-500 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">Cancelar</button>
        <button type="submit"
            class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-500 hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">Salvar</button>
    </div>
    }
</body>