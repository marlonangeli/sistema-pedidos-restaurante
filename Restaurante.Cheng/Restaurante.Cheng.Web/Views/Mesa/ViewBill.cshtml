@using Restaurante.Cheng.Domain.Enums;
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Mesa

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.2/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
<div class="px-6 py-4">
    <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2">Mesa</label>
        <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="@Model.Numero" disabled/>
    </div>
    <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2">Status</label>
        <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="@Model.Status" disabled/>
    </div>
    <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2">Data de Abertura</label>
        <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="@Model.HoraAbertura" disabled/>
    </div>
    <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2">Garçom</label>
        <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="@ViewBag.Garcom" disabled/>
    </div>
    <div class="mb-4">
        <label class="block text-gray-700 font-bold mb-2">Valor Total</label>
        <input type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value="@ViewBag.ValorTotal" disabled/>
    </div>
</div>
<div class="px-6 py-4 bg-gray-100 text-right">
    <a class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-500 hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"
       asp-controller="Mesa" asp-action="Index">
        Voltar
    </a>
</div>
</body>